	@if (Model.SelectedMembersEarlyDinner.Count != 0)
	{
		<table>
			<tr>
				<th>Dinner</th>
			</tr>
			@foreach (Data.Member m in Model.SelectedMembersEarlyDinner)
			{
				<tr>
					<td>@m.FullName</td>
				</tr>
			}
		</table>
	}

	else
	{
		<h4>No Early Plates for Dinner </h4>
